                            "data": "timeRecordId", "render": function (timeRecordId) {
                                return `<a class='btn btn-primary' onclick='Delete(${timeRecordId})'>刪除</a>`
                            }
                        }


                ],
                "language": {
                    "processing": "<p>載入中</p>",
