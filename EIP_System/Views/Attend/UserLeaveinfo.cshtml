                        </li>
                    }
                </ul>
                <div class="tab-content" id="TabContent">
                    @foreach (var item in tabs)
                    {
                        <div class="tab-pane fade" id="@item" role="tabpanel" aria-labelledby="@item-tab">
                            <div style="height:280px">
                                @Html.Raw(item)
