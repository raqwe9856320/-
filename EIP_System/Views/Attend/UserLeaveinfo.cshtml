@section scripts{
    <script>
        var LeaveId;    //儲存請假ID
        var LeaveTable; //請假Table

        $(document).ready(function () {
            var row_agree;  //通過審核不能撤銷
            LeaveTable = $('#LeaveTable').DataTable({
                "ajax": {
                    "type": "POST",
                    "url": "@Url.Action("getLeaveinfo","Attend")",
                    "datatype": "JSON"
                },
                "columns": [
                    { "data": "leavesort" },
                    { "data": "applydate" },
                    { "data": "startdate" },
                    { "data": "enddate" },
                    { "data": "timecount" },
                    { "data": "reason" },
                    { "data": "expired" },
                    { "data":"supervisor"},
                    {
                        "data": "isagreed", "render": function (agree) {
                            let show;
                            if (agree == null) {
                                show = '<div class=""><i class="fa fa-clock-o">待審核</i></div>';
                                row_agree = null;
                            } else if (agree == 1) {
                                show = '<div class="green"><i class="fa fa-check-square ">通過</i></div>';
                                row_agree = 1;
                            } else {
                                show = '<div class="red"><i class="fa fa-remove">不通過</i></div>';
                                row_agree = 0;
                            }
                            return show;
                        }
                    },
                    {
                        "data": "id", "render": function (id) {
                            if (row_agree == null) {
                                return `<a class='btn btn-danger' onclick='getLeaveRow(${id});showModal();'>撤銷</a>`
                            } else {
                                return `<button type="button" class="btn btn-danger" disabled>撤銷</button>`;
                            }
                        }
                    }

                ],

            });

        });

        function showModal() {
            $("#myModal").modal("show");
        }

        function showagree(agree) {
            let show;
            if (agree == null) {
                show = '<div class=""><i class="fa fa-clock-o">待審核</i></div>';
                row_agree = null;
            } else if (agree == 1) {
                show = '<div class="green"><i class="fa fa-check-square ">通過</i></div>';
                row_agree = 1;
            } else {
                show = '<div class="red"><i class="fa fa-remove">不通過</i></div>';
                row_agree = 0;
            }
            return show;
        }

        function getLeaveRow(id) {
            LeaveId = id;
            console.log(LeaveId);
            $.ajax({
                type: "get",
                url: '@Url.Action("getLeaveRow", "Attend")/'+id,
                datatype: "JSON",
                success: function (data) {
                    console.log(data);
                    $('#modal_table').html("");
                    let trHTML = '<table class="table table-bordered">';
                    trHTML += `<thead class="bg-primary">
                                    <tr>
                                        <th>假別</th>
                                        <th>申請日期</th>
                                        <th>開始日期</th>
                                        <th>結束日期</th>
                                        <th>時數</th>
                                        <th>事由</th>
                                        <th>過期日期</th>
                                        <th>審核主管</th>
                                        <th>審核狀態</th>
                                    </tr>
                                </thead>`;

                    trHTML +=
                        '<tr><td>' + data[0].leavesort +
                            '<td>' + data[0].applydate +
                            '<td>' + data[0].startdate +
                            '<td>' + data[0].enddate +
                            '<td>' + data[0].timecount +
                            '<td>' + data[0].reason +
                            '<td>' + data[0].expired +
                            '<td>' + data[0].supervisor +
                            '<td>' + showagree(data[0].isagreed);

                    $('#modal_table').append(trHTML);
                },
                error: function (err) {
                    console.log(`Ajax error: ${err.status} - ${err.statusText}`);
                }

            });
        }

        function submitRevoke() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("submitRevoke", "Attend")/' + LeaveId,
                datatype: "JSON",
                success: function () {
                    alert("申請資料已撤銷");
                    $("#myModal").modal("hide");
                    LeaveTable.ajax.reload();
                },
                error: function (err) {
                    console.log(`Ajax error: ${err.status} - ${err.statusText}`);
                }

            });
        }

        

    </script>
}